<script>
  document.addEventListener('DOMContentLoaded', function() {
    const testimonials = document.querySelectorAll('.testimonial');
    let currentTestimonial = 0;
    
    // Hide all testimonials except the first one
    testimonials.forEach((testimonial, index) => {
      if (index === 0) {
        testimonial.classList.add('active');
      } else {
        testimonial.classList.remove('active');
      }
    });
    
    // Function to rotate testimonials
    function rotateTestimonials() {
      // Hide current testimonial
      testimonials[currentTestimonial].classList.remove('active');
      
      // Move to next testimonial
      currentTestimonial = (currentTestimonial + 1) % testimonials.length;
      
      // Show next testimonial
      testimonials[currentTestimonial].classList.add('active');
    }
    
    // Set interval for rotation - 5 seconds display time
    setInterval(rotateTestimonials, 5000);
  });
</script>
<style>
  main {
    width: 100%;
  }
  
  .container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 20px;
  }
  
  .hero {
    background-color: #4e96c8;
    color: white;
    padding: 60px 20px;
    text-align: center;
  }
  
  h1 {
    font-size: 3rem;
    margin-bottom: 15px;
  }
  
  .subtitle {
    font-size: 1.5rem;
    opacity: 0.9;
  }
  
  section {
    padding: 60px 0;
  }
  
  section:nth-child(even) {
    background-color: #f9f9f9;
  }
  
  h2 {
    text-align: center;
    color: #4e96c8;
    margin-bottom: 30px;
    font-size: 2.2rem;
  }
  
  h3 {
    color: #333;
    margin-bottom: 15px;
    font-size: 1.5rem;
  }
  
  p {
    line-height: 1.6;
    margin-bottom: 20px;
    color: #555;
  }
  
  /* Petfinder section styles */
  .petfinder-cta {
    display: flex;
    justify-content: center;
    gap: 30px;
    margin: 40px 0;
    flex-wrap: wrap;
  }
  
  .action-button {
    display: inline-block;
    padding: 16px 32px;
    color: white;
    text-decoration: none;
    border-radius: 30px;
    font-weight: bold;
    font-size: 1.2rem;
    transition: all 0.3s;
    text-align: center;
    min-width: 220px;
  }
  
  .petfinder-button {
    background-color: #4e96c8;
  }
  
  .application-button {
    background-color: #e76f51;
  }
  
  .action-button:hover {
    transform: translateY(-3px);
    box-shadow: 0 6px 12px rgba(0,0,0,0.15);
  }
  
  .petfinder-button:hover {
    background-color: #3a7cad;
  }
  
  .application-button:hover {
    background-color: #d6603f;
  }
  
  /* New photo row styles - horizontal layout like in the image */
  .photo-row {
    display: flex;
    justify-content: center;
    flex-wrap: wrap;
    gap: 10px;
    margin-bottom: 20px;
  }
  
  .photo-row .photo-item {
    width: 160px;
    height: 160px;
    overflow: hidden;
    border-radius: 5px;
  }
  
  .photo-row .photo-item img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }
  
  /* Success stories styles */
  .success-stories {
    padding: 40px 0; /* Reduced from 60px to 40px */
  }
  
  .stories-intro {
    text-align: center;
    max-width: 800px;
    margin: 0 auto 20px;
    font-size: 1.1rem;
  }
  
  /* Testimonial styles */
  .testimonial-container {
    max-width: 1000px; /* Expanded width */
    margin: 0 auto; /* No margin top to reduce gap */
    background-color: white;
    border-radius: 12px;
    padding: 30px 40px;
    box-shadow: 0 4px 15px rgba(0,0,0,0.08);
    position: relative;
  }
  
  .testimonial-slider {
    position: relative;
    width: 100%;
    min-height: 150px;
  }
  
  .testimonial {
    position: absolute;
    width: 100%;
    text-align: center;
    opacity: 0;
    visibility: hidden;
    transition: opacity 0.5s ease;
    top: 0;
    left: 0;
  }
  
  .testimonial.active {
    opacity: 1;
    visibility: visible;
  }
  
  .testimonial p {
    font-style: italic;
    font-size: 1.1rem;
    line-height: 1.7;
    margin: 0 auto;
  }
  
  @media (max-width: 768px) {
    h1 {
      font-size: 2.5rem;
    }
    
    .subtitle {
      font-size: 1.2rem;
    }
    
    .action-button {
      width: 100%;
      padding: 14px 20px;
    }
    
    .petfinder-cta {
      flex-direction: column;
      gap: 15px;
    }
    
    .photo-row {
      gap: 5px;
    }
    
    .photo-row .photo-item {
      width: 120px;
      height: 120px;
    }
    
    .testimonial-container {
      padding: 20px;
    }
    
    .testimonial p {
      font-size: 1rem;
    }
  }
</style>